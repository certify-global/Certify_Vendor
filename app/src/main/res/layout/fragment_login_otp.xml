<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />

        <variable
            name="viewmodel"
            type="com.certify.vendor.model.LoginViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/enter_pass_code"
            android:layout_width="@dimen/size_275"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_131"
            android:layout_marginStart="@dimen/size_50"
            android:layout_marginEnd="@dimen/size_50"
            android:textAlignment="center"
            android:text="@string/enter_pass_code_title"
            android:textSize="@dimen/text_size_24"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </TextView>

        <TextView
            android:id="@+id/enter_pass_code_description"
            android:layout_width="@dimen/size_266"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_09"
            android:text="@string/enter_pass_code_desc"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/black"
            android:textAlignment="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/enter_pass_code">
        </TextView>

        <EditText
            android:id="@+id/pass_word"
            android:layout_width="@dimen/size_313"
            android:layout_height="@dimen/size_60"
            android:layout_marginTop="@dimen/size_40"
            android:paddingStart="@dimen/size_10"
            android:paddingEnd="@dimen/size_10"
            android:hint="@string/pass_word_text"
            android:inputType="number"
            android:background="@drawable/edit_text_border"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/enter_pass_code_description">
        </EditText>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
