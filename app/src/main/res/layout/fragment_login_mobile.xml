<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />

        <variable
            name="viewmodel"
            type="com.certify.vendor.model.LoginViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/phone_number_back"
            android:layout_width="@dimen/size_25"
            android:layout_height="@dimen/size_25"
            android:layout_marginTop="@dimen/size_20"
            android:layout_marginStart="@dimen/size_26"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </ImageView>

        <TextView
            android:id="@+id/enter_phone_number"
            android:layout_width="@dimen/size_275"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_131"
            android:layout_marginStart="@dimen/size_50"
            android:layout_marginEnd="@dimen/size_50"
            android:textAlignment="center"
            android:text="@string/enter_phone_number_title"
            android:textSize="@dimen/text_size_24"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </TextView>

        <TextView
            android:id="@+id/send_confirmation_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_09"
            android:text="@string/send_confirmation_msg"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/enter_phone_number"
            app:layout_constraintBottom_toTopOf="@id/country_code_layout">
        </TextView>

        <LinearLayout
            android:id="@+id/country_code_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_69"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@id/send_confirmation_code"
            app:layout_constraintLeft_toLeftOf="parent">

            <com.rilixtech.widget.countrycodepicker.CountryCodePicker
                android:layout_width="@dimen/size_50"
                android:layout_height="@dimen/size_60"
                app:ccp_defaultNameCode="US"
                android:gravity="center_vertical"
                app:ccp_hideNameCode="true"
                app:ccp_enableHint="false">
            </com.rilixtech.widget.countrycodepicker.CountryCodePicker>

            <EditText
                android:layout_width="@dimen/size_265"
                android:layout_height="@dimen/size_60"
                android:paddingStart="@dimen/size_10"
                android:paddingEnd="@dimen/size_10"
                android:gravity="center_vertical"
                android:hint="@string/phone_number_title"
                android:inputType="text"
                android:background="@drawable/edit_text_border">
            </EditText>

        </LinearLayout>

        <TextView
            android:layout_width="@dimen/size_313"
            android:layout_height="@dimen/size_56"
            android:layout_marginBottom="@dimen/size_112"
            android:gravity="center"
            android:text="@string/request_passcode"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/white"
            android:background="@color/green"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>