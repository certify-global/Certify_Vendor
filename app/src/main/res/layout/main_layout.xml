    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutFacility"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="visible">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_20"
        android:text="@string/request_appoinment"
        android:textColor="@color/header_color"
        android:textSize="@dimen/size_20"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_20"
        android:text="@string/select_facility"
        android:textColor="@color/light_grey"
        android:textSize="@dimen/text_size_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/size_222"
        android:layout_height="@dimen/size_150"
        android:layout_marginTop="@dimen/size_20"
        android:src="@drawable/ic_calendar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Spinner
        android:id="@+id/spinnerFacility"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_70"
        android:layout_marginLeft="@dimen/size_20"
        android:layout_marginTop="@dimen/size_20"
        android:layout_marginRight="@dimen/size_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:background="@drawable/border_grey"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/content_appoinment"
        app:layout_constraintEnd_toEndOf="@+id/spinnerFacility"
        app:layout_constraintStart_toStartOf="@+id/spinnerFacility"
        app:layout_constraintTop_toBottomOf="@+id/spinnerFacility"
        android:layout_marginTop="@dimen/size_20"
        android:layout_marginLeft="@dimen/size_20"
        android:layout_marginRight="@dimen/size_20"
        android:lineSpacingExtra="@dimen/size_05"
        android:textColor="@color/text_light_blue"
        android:textSize="@dimen/text_size_12"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textviewOne"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:layout_marginTop="@dimen/size_10"
        android:textColor="@color/light_grey" />

     <ImageView
         android:id="@+id/imageView3"
         android:layout_width="@dimen/size_50"
         android:layout_height="@dimen/size_70"
         app:layout_constraintBottom_toBottomOf="@+id/spinnerFacility"
         app:layout_constraintEnd_toEndOf="@+id/spinnerFacility"
         app:layout_constraintHorizontal_bias="0.986"
         app:layout_constraintStart_toStartOf="@+id/spinnerFacility"
         app:layout_constraintTop_toTopOf="@+id/spinnerFacility"
         app:layout_constraintVertical_bias="0.0"
         app:srcCompat="@drawable/ic_spinner"
         android:padding="02dp"/>
     <include
         android:id="@+id/progress_circular_layout"
         layout="@layout/progress_bar"
         android:layout_width="match_parent"
         android:layout_height="match_parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>