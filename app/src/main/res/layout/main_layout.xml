<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutFacility"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="visible">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:text="@string/request_appoinment"
            android:textColor="@color/header_color"
            android:textSize="@dimen/size_20"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:text="@string/select_facility"
            android:textColor="@color/light_grey"
            android:textSize="@dimen/text_size_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/size_222"
            android:layout_height="@dimen/size_112"
            android:layout_marginTop="@dimen/size_20"
            android:src="@drawable/ic_calendar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <Spinner
            android:id="@+id/spinnerFacility"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50"
            android:layout_marginLeft="@dimen/size_20"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginRight="@dimen/size_20"
            android:background="@drawable/border_grey"
            android:paddingRight="@dimen/size_10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <Spinner
            android:id="@+id/spinnerLocation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50"
            android:layout_marginLeft="@dimen/size_20"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginRight="@dimen/size_20"
            android:background="@drawable/border_grey"
            android:paddingRight="@dimen/size_10"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinnerFacility" />

        <Spinner
            android:id="@+id/spinnerDepartment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50"
            android:layout_marginLeft="@dimen/size_20"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginRight="@dimen/size_20"
            android:background="@drawable/border_grey"
            android:paddingRight="@dimen/size_10"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinnerLocation" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_20"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginRight="@dimen/size_20"
            app:cardBackgroundColor="#F9FAFF"
            app:layout_constraintEnd_toEndOf="@+id/spinnerDepartment"
            app:layout_constraintStart_toStartOf="@+id/spinnerDepartment"
            app:layout_constraintTop_toBottomOf="@+id/spinnerDepartment">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:lineSpacingExtra="@dimen/size_05"
                android:padding="@dimen/size_05"
                android:text="@string/content_appoinment"
                android:textColor="@color/text_light_blue" />


        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:text="@string/textviewOne"
            android:textColor="@color/light_grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView" />

        <TextView
            android:id="@+id/tv_facility_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_10"
            android:background="@color/green"
            android:paddingStart="@dimen/size_25"
            android:paddingTop="10dp"
            android:paddingEnd="@dimen/size_25"
            android:paddingBottom="10dp"
            android:text="@string/next"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/size_50"
            android:layout_height="@dimen/size_50"
            android:layout_marginLeft="@dimen/size_05"
            android:padding="02dp"
            app:layout_constraintBottom_toBottomOf="@+id/spinnerFacility"
            app:layout_constraintEnd_toEndOf="@+id/spinnerFacility"
            app:layout_constraintHorizontal_bias="0.986"
            app:layout_constraintStart_toStartOf="@+id/spinnerFacility"
            app:layout_constraintTop_toTopOf="@+id/spinnerFacility"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_spinner" />

        <ImageView
            android:id="@+id/img_location"
            android:layout_width="@dimen/size_50"
            android:layout_height="@dimen/size_50"
            android:layout_marginLeft="@dimen/size_05"
            android:padding="02dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/spinnerLocation"
            app:layout_constraintEnd_toEndOf="@+id/spinnerLocation"
            app:layout_constraintHorizontal_bias="0.986"
            app:layout_constraintStart_toStartOf="@+id/spinnerLocation"
            app:layout_constraintTop_toTopOf="@+id/spinnerLocation"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_spinner" />

        <ImageView
            android:id="@+id/img_department"
            android:layout_width="@dimen/size_50"
            android:layout_height="@dimen/size_50"
            android:layout_marginLeft="@dimen/size_05"
            android:padding="02dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/spinnerDepartment"
            app:layout_constraintEnd_toEndOf="@+id/spinnerDepartment"
            app:layout_constraintHorizontal_bias="0.986"
            app:layout_constraintStart_toStartOf="@+id/spinnerDepartment"
            app:layout_constraintTop_toTopOf="@+id/spinnerDepartment"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_spinner" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>